<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hemant.Login.MainActivity">

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/tvValue1"
        android:layout_alignStart="@+id/tvValue1"
        android:layout_marginBottom="98dp"
        android:textSize="27dp" />

    <TextView
        android:id="@+id/tvValue6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/tvValue"
        android:layout_alignBottom="@+id/tvValue"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:text="Desired Humidity      75%"
        android:textSize="27dp" />

    <TextView
        android:id="@+id/tvValue1"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="27dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:text="Refresh" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:textSize="27dp"
        android:text="Desired Temperatur 50C" />


</RelativeLayout>
